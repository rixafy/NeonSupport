<idea-plugin>
    <id>org.nette.neon</id>
    <name>Neon</name>
    <vendor>Nette Community</vendor>

    <!-- http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges -->
    <idea-version/>

    <!-- http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products -->
    <depends>com.intellij.modules.lang</depends>
    <depends>com.jetbrains.php</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Neon" implementationClass="org.nette.neon.file.NeonFileType" fieldName="INSTANCE"
                  language="neon" extensions="neon" />

        <colorSettingsPage implementation="org.nette.neon.editor.NeonColorsPage" />
        <lang.syntaxHighlighterFactory language="neon" implementationClass="org.nette.neon.editor.NeonSyntaxHighlighterFactory" />
        <lang.commenter language="neon" implementationClass="org.nette.neon.NeonCommenter" />
        <lang.psiStructureViewFactory language="neon" implementationClass="org.nette.neon.editor.NeonStructureViewFactory" />

        <!-- code settings (indent, tabs?) -->
        <codeStyleSettingsProvider implementation="org.nette.neon.editor.NeonCodeStyleSettingsProvider" />
        <langCodeStyleSettingsProvider implementation="org.nette.neon.editor.NeonLanguageCodeStyleSettingsProvider" />

        <lang.parserDefinition language="neon" implementationClass="org.nette.neon.parser.NeonParserDefinition" />
        <lang.fileViewProviderFactory language="neon" implementationClass="org.nette.neon.file.NeonFileViewProviderFactory" />
        <lang.braceMatcher language="neon" implementationClass="org.nette.neon.NeonBraceMatcher" />
        <lang.foldingBuilder language="neon" implementationClass="org.nette.neon.editor.NeonFoldingBuilder" />
        <completion.contributor language="neon" implementationClass="org.nette.neon.completion.NeonCompletionContributor" />
        <breadcrumbsInfoProvider implementation="org.nette.neon.editor.NeonBreadcrumbsInfoProvider" />
        <enterHandlerDelegate implementation="org.nette.neon.editor.NeonEnterHandler"/>

        <annotator implementationClass="org.nette.neon.annotator.NeonAnnotator" language="neon"/>
    </extensions>
</idea-plugin>
